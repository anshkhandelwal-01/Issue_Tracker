<link rel="stylesheet" href="/css/home.css">
<div id="main-body">
  <h1>Create New Issue for <%= project.name %></h1>
  <form action="/projects/<%= project._id %>/issues" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" required><br>
    <label for="description">Description:</label>
    <textarea name="description" required></textarea><br>
    <label for="labels">Labels (separated by commas):</label>
    <input type="text" name="labels"><br>
    <label for="author">Author:</label>
    <input type="text" name="author" required><br>
    <input type="submit" value="Create Issue">
  </form>
  <a href="/projects/<%= project._id %>">Back to Project Detail</a>
</div>
